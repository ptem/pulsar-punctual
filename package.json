{
  "name": "pulsar-punctual",
  "main": "./lib/pulsar-punctual",
  "version": "0.0.0",
  "description": "Live coding Punctual from within Pulsar - audio-visual performance language integration",
  "keywords": [
    "punctual",
    "live-coding",
    "webgl",
    "audio",
    "visual",
    "performance",
    "creative-coding"
  ],
  "activationCommands": {
    "atom-workspace": [
      "pulsar-punctual:toggle",
      "pulsar-punctual:evalLine",
      "pulsar-punctual:evalBlock",
      "pulsar-punctual:evalCode",
      "pulsar-punctual:toggleVisibility",
      "pulsar-punctual:showConsole"
    ]
  },
  "repository": "https://github.com/ptem/pulsar-punctual",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-message-panel": "^1.3.0",
    "raf-loop": "^1.1.3",
    "punctual": "github:dktr0/Punctual"
  },
  "configSchema": {
    "canvasWidth": {
      "type": "integer",
      "default": 1920,
      "minimum": 320,
      "description": "Canvas width in pixels"
    },
    "canvasHeight": {
      "type": "integer",
      "default": 1080,
      "minimum": 240,
      "description": "Canvas height in pixels"
    },
    "flashDuration": {
      "type": "integer",
      "default": 200,
      "minimum": 100,
      "maximum": 1000,
      "description": "Duration of code flash effect in milliseconds"
    }
  }
}
